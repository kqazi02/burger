<div class = "container-fluid">

    <div class="jumbotron text-center">
        <img src= "/images/burger.png" class="img-responsive center-block" alt="Burger" style = "width:250px">
        <h1>Eat Da Burger</h1>
        <div class = "row">
            <div class="col-md-offset-1 col-md-4 col-md-offset-1">
                <!-- undevoured burgers -->
                <ol>
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            <li>
                                {{this.burger_name}}
                                <form action="/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button type="submit">Devour it!</button>
                                </form>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ol>
                
            </div>
            <div class="col-md-offset-1 col-md-4 col-md-offset-1">
                <!-- devoured burgers -->
                 <ol>
                    {{#each burgers}}
                        {{#if this.devoured}}
                            <li>
                                {{this.burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ol>               
            </div>
        </div>
        
        <form action="/" method="POST">
            <div class="form-group">
                <input class="form-control input-lg" type="text" placeholder="" name="burger_name">
            </div>
            <button class="btn btn-primary btn-lg" type="submit" role="button">Let's cook it</button>
        </form>
    </div>

</div>